{
  "editor.defaultFormatter": "dprint.dprint",
  "editor.formatOnSave": true,
  "[nix]": {
    "editor.defaultFormatter": "jnoortheen.nix-ide"
  },
  "nix.enableLanguageServer": true,
  "nix.serverPath": "nil",
  "nix.serverSettings": {
    "nil": {
      "formatting": {
        "command": ["nixfmt"]
      }
    }
  },
  "json.schemas": [
    {
      "fileMatch": [
        "renovate.json",
        "default.json",
        "self.json"
      ],
      "url": "https://docs.renovatebot.com/renovate-schema.json"
    }
  ]
}
